# Database Configuration
DB_HOST=localhost
DB_NAME=career_path_lms
DB_USER=root
DB_PASS=

# JWT Configuration (CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400

# Application Configuration
APP_ENV=development
APP_DEBUG=true
BASE_URL=http://localhost:5173
API_URL=http://localhost/career-path-api/api
SITE_NAME=Career Path Institute - Shimla

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@careerpathinstitute.com
SMTP_FROM_NAME=Career Path Institute

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,ppt,pptx

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log