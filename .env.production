# Production Environment Configuration
# IMPORTANT: Update these values for your production server

# Database Configuration
DB_HOST=localhost
DB_NAME=career_path_lms
DB_USER=your_db_user
DB_PASS=your_secure_db_password

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE-THIS-TO-A-VERY-SECURE-RANDOM-STRING-AT-LEAST-64-CHARACTERS-LONG-FOR-PRODUCTION-2024
JWT_ALGORITHM=HS256
JWT_EXPIRY=86400

# Application Configuration
APP_ENV=production
APP_DEBUG=false
BASE_URL=https://yourdomain.com
API_URL=https://yourdomain.com/career-path-api/api
SITE_NAME=Career Path Institute - Shimla

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,ppt,pptx

# Logging
LOG_LEVEL=ERROR
LOG_FILE=logs/app.log

# Email Configuration (Required for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Career Path Institute

# Razorpay Configuration (Required for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret